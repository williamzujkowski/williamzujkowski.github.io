{
  "name": "williamzujkowski.github.io",
  "version": "1.0.0",
  "description": "Personal website of William Zujkowski",
  "scripts": {
    "prebuild": "uv run python scripts/stats-generator.py",
    "build:css": "postcss src/assets/css/main.css -o _site/assets/css/main.css",
    "build:eleventy": "eleventy",
    "build:js": "node scripts/bundle-js.js",
    "build:stats": "uv run python scripts/blog-content/generate-stats-dashboard.py",
    "build": "npm run build:css && npm run build:eleventy && npm run build:js && npm run build:stats",
    "stats": "uv run python scripts/stats-generator.py",
    "watch:css": "postcss src/assets/css/main.css -o _site/assets/css/main.css --watch",
    "watch:eleventy": "eleventy --serve",
    "serve": "npm-run-all --parallel watch:*",
    "debug": "DEBUG=* eleventy",
    "validate:km": "node tools/validation/validate-km-standards.js",
    "test": "node tests/test-runner.js tests/unit",
    "test:unit": "node tests/test-runner.js tests/unit",
    "test:integration": "node tests/test-runner.js tests/integration",
    "test:e2e": "node tests/test-runner.js tests/e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:watch": "nodemon --watch tests --watch src --exec 'npm test'",
    "validate:mermaid": "node scripts/validate-mermaid-rendering.js",
    "test:darkmode": "node scripts/test-dark-mode-toggle.js",
    "test:search": "node scripts/test-search-functionality.js"
  },
  "keywords": [
    "eleventy",
    "personal",
    "website"
  ],
  "author": "William Zujkowski",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-navigation": "^1.0.4",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "chrome-launcher": "^1.2.0",
    "cssnano": "^7.0.7",
    "js-yaml": "^4.1.1",
    "lighthouse": "^12.8.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0"
  }
}
