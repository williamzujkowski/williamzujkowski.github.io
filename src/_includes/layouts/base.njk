/* 1. Layout essentials */
*,*::before,*::after{box-sizing:border-box;margin:0;padding:0}
html{scroll-behavior:smooth;-webkit-text-size-adjust:100%}
body{min-height:100vh;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',sans-serif;font-size:1rem;line-height:1.65}

/* 2. Critical colors (light mode only, dark mode deferred) */
:root{
  --bg:oklch(98% 0.01 80);
  --fg:oklch(25% 0.02 270);
  --link:oklch(45% 0.18 25);
  --border:oklch(90% 0.01 270);
}

/* 3. Header (above fold, sticky) */
.site-header{
  position:sticky;
  top:0;
  z-index:50;
  backdrop-filter:blur(12px);
  -webkit-backdrop-filter:blur(12px);
  background:rgba(253,251,248,0.9);
  border-bottom:1px solid var(--border);
}

/* 4. Skip link (accessibility) */
.skip-to-main{
  position:absolute;
  left:-9999px;
  z-index:999;
  padding:1rem 1.5rem;
  background:var(--link);
  color:white;
  text-decoration:none;
  border-radius:0.25rem;
}
.skip-to-main:focus{
  left:50%;
  top:1rem;
  transform:translateX(-50%);
}

/* 5. Dark mode (prefers-color-scheme only, toggle deferred) */
@media (prefers-color-scheme:dark){
  :root{
    --bg:oklch(15% 0.02 270);
    --fg:oklch(95% 0.01 270);
    --link:oklch(75% 0.19 50);
    --border:oklch(25% 0.03 270);
  }
  .site-header{
    background:rgba(26,21,51,0.95);
  }
}

/* 6. Focus states */
:focus-visible{
  outline:3px solid var(--link);
  outline-offset:2px;
}

/* 7. Screen reader only */
.sr-only{
  position:absolute;
  width:1px;
  height:1px;
  padding:0;
  margin:-1px;
  overflow:hidden;
  clip:rect(0,0,0,0);
  white-space:nowrap;
  border-width:0;
}</style>

