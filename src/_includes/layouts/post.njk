---
layout: base
---
<article class="post">
    <header class="post-header">
        <h1>{{ title }}</h1>
        <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
    </header>
    
    <div class="post-content">
        {{ content | safe }}
    </div>
    
    <footer class="post-footer">
        <a href="/posts/">← Back to all posts</a>
    </footer>
</article>