{# Modern Feature Card Component
   Usage: {% include "components/feature-card-modern.njk" %}
   Required variables:
   - icon (SVG path data)
   - title (string)
   - description (string)
#}

<div class="modern-card p-8">
  {# Icon #}
  <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-lg"
       style="background: linear-gradient(135deg, var(--color-accent-primary), var(--color-accent-secondary));">
    <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      {{ icon | safe }}
    </svg>
  </div>

  {# Title #}
  <h3 class="text-subheading mb-3"
      style="font-size: var(--text-lg); font-weight: 700; color: var(--color-text-primary);">
    {{ title }}
  </h3>

  {# Description #}
  <p class="text-body"
     style="font-size: var(--text-sm); color: var(--color-text-secondary); line-height: var(--line-height-relaxed);">
    {{ description }}
  </p>
</div>
