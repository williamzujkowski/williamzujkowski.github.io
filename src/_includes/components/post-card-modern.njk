{# Modern Post Card Component
   Usage: {% include "components/post-card-modern.njk" %}
   Required variables: post (the post object)
#}

<article class="post-card">
  {# Post Image (if exists) #}
  {% if post.data.image %}
  <div class="post-card-image">
    <img src="{{ post.data.image }}"
         alt="{{ post.data.title }}"
         loading="lazy"
         width="800"
         height="450">
  </div>
  {% endif %}

  {# Post Content #}
  <div class="p-6 lg:p-8">
    {# Date #}
    <time datetime="{{ post.date | htmlDateString }}" class="post-date">
      {{ post.date | readableDate }}
    </time>

    {# Title #}
    <h3 class="mt-3 text-subheading"
        style="font-size: var(--text-lg); font-weight: 700; color: var(--color-text-primary);">
      <a href="{{ post.url }}" class="hover:underline">
        {{ post.data.title }}
      </a>
    </h3>

    {# Description #}
    <p class="mt-3 text-body line-clamp-3"
       style="font-size: var(--text-sm); color: var(--color-text-secondary);">
      {{ post.data.description }}
    </p>

    {# Tags #}
    {% if post.data.tags and post.data.tags.length > 0 %}
    <div class="mt-4 flex flex-wrap gap-2">
      {% for tag in post.data.tags | limit(3) %}
        {% if tag != "posts" %}
        <span class="tag-pill">{{ tag }}</span>
        {% endif %}
      {% endfor %}
    </div>
    {% endif %}

    {# Read More Link #}
    <div class="mt-6">
      <a href="{{ post.url }}"
         class="inline-flex items-center gap-2 text-sm font-semibold transition-colors"
         style="color: var(--color-link-default);">
        Read more
        <svg class="w-4 h-4 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>
</article>
